<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/nutriFacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutritional Facts"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/servSize"
        app:layout_constraintTop_toTopOf="parent" />

    //serve size

    <TextView
        android:id="@+id/servSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutriFacts"
        android:text="Serving Size"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/nutriFacts"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line1" />

    <TextView
        android:id="@+id/serveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nutriFacts"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/servSize"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/labelServe"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/servSize"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/labelServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:text="Amount Per Serving "
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/servSize"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line1" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/labelServe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelServe"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //calories

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelServe"
        android:text="Calories"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line2" />

    <TextView
        android:id="@+id/calValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/calories"
        android:layout_marginLeft="6dp" />

    //calories from fat

    <TextView
        android:id="@+id/calFromFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calories"
        android:layout_marginEnd="5dp"
        android:text="Calories From Fat"
        app:layout_constraintRight_toLeftOf="@+id/calFromFatValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/calFromFatValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="@+id/dailyVal"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginRight="36dp" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/dailyVal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calories"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/dailyVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% Daily Value %"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="@+id/line3"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/calFromFatValue"
        android:layout_marginRight="3dp" />

    <ImageView
        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/dailyVal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyVal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //fat

    <TextView
        android:id="@+id/totalFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Fat"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line4" />

    <TextView
        android:id="@+id/fatValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/totalFat"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/line5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/totalFat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalFat"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //carbohydrate

    <TextView
        android:id="@+id/carb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Carbohydrate"
        app:layout_constraintRight_toLeftOf="@+id/fatValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/fatValue" />

    <TextView
        android:id="@+id/carbValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/carb"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/line6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/carb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carb"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        tools:ignore="ContentDescription" />

    //dietary fiber

    <TextView
        android:id="@+id/dietFiber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dietary Fiber"
        android:layout_marginEnd="9dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/carb"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        android:layout_marginRight="9dp" />

    <TextView
        android:id="@+id/dietaryFiberValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        app:layout_constraintRight_toLeftOf="@+id/carbValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/carbValue" />

    <ImageView
        android:id="@+id/line7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/protein"
        app:layout_constraintRight_toRightOf="@+id/line6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/dietFiber"
        app:layout_constraintTop_toTopOf="@+id/protein" />

    //protein

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/dietFiber"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line8" />

    <TextView
        android:id="@+id/proteinValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/totalFat"
        app:layout_constraintTop_toBottomOf="@+id/line7"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/totalFat" />

    <ImageView
        android:id="@+id/line8"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/vitA"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/protein"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //vitA

    <TextView
        android:id="@+id/vitA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin A"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/protein"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line8" />

    <TextView
        android:id="@+id/vitAValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/line8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/vitA"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/line9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/vitA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vitA"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //vitC

    <TextView
        android:id="@+id/vitC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin C"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/vitA"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/vitA"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/vitA" />

    <TextView
        android:id="@+id/vitCValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/vitAValue"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/vitAValue"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/vitAValue" />

    <ImageView
        android:id="@+id/line10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/vitC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vitC"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    //calcium

    <TextView
        android:id="@+id/calcium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcium"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/iron"
        app:layout_constraintTop_toBottomOf="@+id/line10"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/iron" />

    <TextView
        android:id="@+id/calciumValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        app:layout_constraintRight_toLeftOf="@+id/vitAValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line10"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/vitAValue" />

    <ImageView
        android:id="@+id/line11"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/calcium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcium"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/iron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iron"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/line11"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/line11" />

    <TextView
        android:id="@+id/ironValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0g"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="@+id/calcium"
        app:layout_constraintTop_toBottomOf="@+id/line11"
        android:layout_marginRight="6dp" />

    <ImageView
        android:id="@+id/line12"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/black_bar"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/iron"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iron"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />


</android.support.constraint.ConstraintLayout>
